{
  "name": "simple-chess",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run vite",
    "build": "tsc -b && bun run vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "lint": "bun run eslint .",
    "preview": "bun run vite preview",
    "server": "bun run server.ts",
    "start": "bun run server.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,html}\" \"server.ts\""
  },
  "dependencies": {
    "express": "^5.1.0",
    "prettier": "3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.3",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/socket.io": "^3.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1"
  }
}
